# CollectIQ Frontend Environment Variables
# Copy this file to .env.local and fill in the values

# ============================================================================
# API Configuration
# ============================================================================

# API Gateway endpoint (required)
NEXT_PUBLIC_API_URL=https://api.collectiq.com

# ============================================================================
# Authentication (Cognito)
# ============================================================================

# Cognito User Pool ID (required)
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX

# Cognito App Client ID (required)
NEXT_PUBLIC_COGNITO_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX

# Cognito Domain (required)
NEXT_PUBLIC_COGNITO_DOMAIN=collectiq-hackathon.auth.us-east-1.amazoncognito.com

# OAuth Redirect URI (required)
NEXT_PUBLIC_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# OAuth Logout URI (required)
NEXT_PUBLIC_OAUTH_LOGOUT_URI=http://localhost:3000

# ============================================================================
# Feature Flags
# ============================================================================

# Note: Auto-trigger revaluation is handled by the backend via EventBridge.
# The backend automatically starts AI analysis when cards are created.
# No frontend environment variables are needed for auto-trigger.

# Add future feature flags here as needed

# ============================================================================
# Analytics (Optional)
# ============================================================================

# Google Analytics Measurement ID
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# ============================================================================
# Development
# ============================================================================

# Enable debug logging
# NEXT_PUBLIC_DEBUG=false

# Mock API responses (for development without backend)
# NEXT_PUBLIC_MOCK_API=false
