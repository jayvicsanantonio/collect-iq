{
  "name": "@collectiq/backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "CollectIQ serverless backend services",
  "scripts": {
    "build": "node esbuild.mjs",
    "build:prod": "NODE_ENV=production node esbuild.mjs",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
