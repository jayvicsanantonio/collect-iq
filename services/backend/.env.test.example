# E2E Test Environment Variables
# Copy this file to .env.test and fill in with your test environment values

# AWS Configuration
AWS_REGION=us-east-1

# DynamoDB
DDB_TABLE=test-collectiq-cards

# S3
BUCKET_UPLOADS=test-collectiq-uploads

# Cognito Test User Pool
# Note: User pool must have USER_PASSWORD_AUTH enabled
COGNITO_USER_POOL_ID=us-east-1_TESTPOOL
COGNITO_CLIENT_ID=test-client-id
COGNITO_DOMAIN=test-collectiq

# Test User Credentials
# This user will be created automatically if it doesn't exist
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!

# Step Functions
STEP_FUNCTIONS_ARN=arn:aws:states:us-east-1:123456789012:stateMachine:test-collectiq-revalue

# EventBridge
EVENT_BUS_NAME=test-collectiq-events

# Bedrock
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MAX_TOKENS=2048
BEDROCK_TEMPERATURE=0.2

# Upload Configuration
ALLOWED_UPLOAD_MIME=image/jpeg,image/png,image/heic
MAX_UPLOAD_MB=12

# Cache Configuration
CACHE_TTL_SECONDS=300
IDEMPOTENCY_TTL_SECONDS=600

# API Gateway (for E2E tests)
API_GATEWAY_URL=https://test-api.execute-api.us-east-1.amazonaws.com

# Secrets (for E2E tests - use test API keys)
EBAY_APP_ID=test-ebay-key
TCGPLAYER_PUBLIC_KEY=test-tcgplayer-public
TCGPLAYER_PRIVATE_KEY=test-tcgplayer-private
PRICECHARTING_KEY=test-pricecharting-key
