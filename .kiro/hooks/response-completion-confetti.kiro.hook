{
  "enabled": true,
  "name": "Response Completion Confetti",
  "description": "Automatically opens Raycast confetti extension after each AI response is completed to provide a clear visual signal that work is done",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "**/*"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Execute the command: open \"raycast://extensions/raycast/raycast/confetti\""
  }
}