{
  "enabled": true,
  "name": "Run pnpm lint on file edit",
  "description": "Automatically runs 'pnpm -w lint' whenever a file is edited to ensure code quality standards are maintained across the workspace",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "**/*"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Run the command 'pnpm -w lint' to check code quality across the workspace"
  }
}