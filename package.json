{
  "name": "collect-iq",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --no-error-on-unmatched-pattern",
    "typecheck": "pnpm --filter @collect-iq/web typecheck",
    "web:dev": "pnpm --filter @collect-iq/web dev",
    "web:build": "pnpm --filter @collect-iq/web build",
    "web:start": "pnpm --filter @collect-iq/web start",
    "backend:build": "pnpm --filter @collectiq/backend build",
    "backend:typecheck": "pnpm --filter @collectiq/backend typecheck",
    "backend:test": "pnpm --filter @collectiq/backend test"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@eslint/js": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "@next/eslint-plugin-next": "^14.2.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  }
}
